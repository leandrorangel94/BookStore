@model BookStore.ViewModels.EditorBookViewModel

@{
    ViewBag.Title = "Criando um novo livro...";
    Layout = "~/Views/Shared/_LayoutNovo.cshtml";

}

@helper MinhaFuncao(string nome)
{
    <text>Você está logado como: @nome</text>
}

<p>
    @MinhaFuncao("Leandro Rangel")
</p>

<h2>Novo Livro</h2>

@using(Html.BeginForm())
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>

    @Html.ValidationMessage("Mensagem")

    @Html.Partial("Partials/EditorBookPartial", Model)

    @Html.EditorFor(x=>x.Age)
    @Html.ValidationMessageFor(x => x.Age);

    <button type="submit" class="btn btn-primary">
        Criar
    </button>
}


@section menu{
    <div>
        Olá, você está na página criação
        <p>
            <a href="@Url.Action("Index")">Voltar</a>
        </p>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}